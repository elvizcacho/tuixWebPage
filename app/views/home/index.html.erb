<div id="menu" style="display:none;">
<%= menu_navegacion2({:aplicaciones_web => t('home.seccion1.menu'), :diseno_grafico => t('home.seccion2.menu'), :contactenos => t('home.seccion3.menu')}) %>
</div>
<div id="part1">
	<div class="row">
		<div class="col-md-12">
			<canvas id="canvas" width="1280" height="630" style="background: rgba(255, 255, 255, .1);"></canvas>
		</div>
	</div><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
</div>

<div id="part2" class="row">
	<div class="col-md-5 col-md-offset-1">
		<h1 class="white-text-color"><%= t('home.seccion1.titulo') %></h1>
	</div>
	<div class="col-md-2 col-md-offset-4">
		<strong class="white-text-color">Idioma</strong>
		<%= link_to(image_tag("usa_flag_icon.png"),'/en',method: :get) %> <%= link_to(image_tag("spain_flag_icon.gif"),'/es',method: :get) %>
	</div>
</div>
	<div id="part3" class="row section2"><br/>
		<div class="col-md-3 col-md-offset-1">
			<div class="thumbnail no-border">
				<%= image_tag("cloud.png",:class => "img-responsive",:size => "300x300") %>
				<div class="caption">
					<h3 class="white-text-color"><%= t('home.seccion1.tumbnail1.titulo') %></h3>
					<p class="text-justify gray-text-color"><%= t('home.seccion1.tumbnail1.contenido') %></p>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="thumbnail no-border">
				<%= image_tag("mobil.png", :class => "img-responsive", :size => "300x300") %>
				<div class="caption">
					<h3 class="white-text-color"><%= t('home.seccion1.tumbnail2.titulo') %></h3>
					<p class="text-justify gray-text-color"><%= t('home.seccion1.tumbnail2.contenido') %><br/><br/></p>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="thumbnail no-border">
				<%= image_tag("pencil.png", :class => "img-responsive", :size => "300x300") %>
				<div class="caption">
					<h3 class="white-text-color"><%= t('home.seccion1.tumbnail3.titulo') %></h3>
					<p class="text-justify gray-text-color"><%= t('home.seccion1.tumbnail3.contenido') %><br/><br/><br/></p>
				</div>
			</div>
		</div>
	</div>
<div id="part5" class="section4">
	<div class="container">
		<h1 class="white-text-color"><%= t('home.seccion2.titulo') %></h1>
	<br/><br/><br/>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= form_tag("/home/enviar",:id => "form_email") do %>
				<%= text_field_tag("nombre","",:placeholder => t('home.seccion2.form.nombre'),:class => "form-control form-backg",:required => true) %><br/>
				<%= text_field_tag("asunto","",:placeholder => t('home.seccion2.form.asunto'),:class => "form-control form-backg",:required => true) %><br/>
				<%= email_field_tag("email","",:placeholder => t('home.seccion2.form.email'),:class => "form-control form-backg",:required => true) %><br/>
				<%= text_area_tag("body","",:placeholder => t('home.seccion2.form.body'),:class => "form-control form-backg",:size => "20x10",:required => true) %><br/>
				<%= submit_tag(t('home.seccion2.form.submit'),:class => "form-control btn btn-danger") %>
			<% end %>
		</div>
	</div>
</div><br/><br/><br/><br/><br/><br/><br/><br/>
</div>
<br/><br/><br/><br/><br/>
<div id="part6">
<div class="container">
	<h1 class="white-text-color"><%= t('home.seccion3.titulo') %></h1><br/><br/>
	<div class="row">
		<div class="text-center">
			<%= link_to(image_tag("facebook.png",:size => "250x250"),"https://www.facebook.com/tuixcolombia") %>
			<%= link_to(image_tag("twitter.png",:size => "250x250"),"https://twitter.com/tuixcolombia") %>
			<%= link_to(image_tag("googleplus.png",:size => "250x250"),"https://plus.google.com/114561641603084783381") %>
		</div>
	</div><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
</div>
</div>
